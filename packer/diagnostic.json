{
    "variables": {
        "ssh_name": "diagnostic",
        "ssh_pass": "diagnostic",
        "hostname": "diagnostic",
        "vm_name": "Diagnostic_demo",
        "GITHUB_AUTH_TOKEN": "{{env `GITHUB_AUTH_TOKEN`}}",
        "disk_size": "10000"
    },

    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "format": "ova",
        "vm_name": "{{user `vm_name`}}",

        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--vram", "64"],
		    ["modifyvm", "{{.Name}}", "--memory", "1024"],
			["modifyvm", "{{.Name}}", "--cpus", "2"],	
			["modifyvm", "{{.Name}}", "--nic1", "nat"]
        ],
		
		"vboxmanage_post": [
			["modifyvm", "{{.Name}}", "--nic1","hostonly"], 
			["modifyvm", "{{.Name}}", "--hostonlyadapter1", "[MY_HOST_ONLY_ADAPTER]"]
		],

        "disk_size": "{{user `disk_size`}}",

        "iso_url": "http://releases.ubuntu.com/artful/ubuntu-17.10.1-server-amd64.iso",
        "iso_checksum": "8ff73f1b622276758475c3bd5190b382774626de5a82c50930519381f6c3a3f8",
        "iso_checksum_type": "sha256",

        "http_directory" : "preseeds",
        "http_port_min" : 9001,
        "http_port_max" : 9011,

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "20m",
        "ssh_pty" : "true",

        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
		"post_shutdown_delay": "2m",

        "boot_command" : [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{user `hostname`}} ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- <enter>"
        ]
    }
	],

    "provisioners": [{
        "type": "shell",
        "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
        "inline": [
            "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers"
        ]
    },
    {
        "type": "shell",
        "environment_vars": "",
        "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
        "script": "scripts/diagnostic_installer.sh",
        "pause_before": "10s"
    }],
	    "post-processors":[{
        "type": "checksum",
        "checksum_types": ["sha1", "sha512"]
	}]
}
